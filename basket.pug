							a.link.card-basket__link(href="#") Шапка розовая
						.card-basket__column.card-basket__column_price
							.card-basket__price
								b.card-basket__yen ¥&nbsp;804,4
								.card-basket__rubl ₽&nbsp;7463,43
						.card-basket__column.card-basket__column_count
							.card-basket__count 
							b 69
							|  товаров
						.card-basket__column.card-basket__column_status.hidden-xs
							.card-basket__status
