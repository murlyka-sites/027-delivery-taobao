button-theme($color-main, $color-second = white)
	background $color-main
	color $color-second
	// box-shadow inset 0 -6px 0 rgba(0, 0, 0, 0.2)

	&:hover,
	&:focus,
	&:active
		background darken($color-main, 10%)
		color $color-second
		text-decoration none

	&:active {
		box-shadow none
	}

.button {
	display inline-block
	text-decoration none
	border none
	text-align center

	&_size {
		&_xs {
			font-size 18px
			line-height 18px
			padding 13px 10px 16px
			border-radius 22px
			font-weight 700
			box-shadow 0 4px 0
			box-shadow inset 0 -4px 0 rgba(0, 0, 0, 0.2)

			&:active {
				box-shadow none
			}
		}

		&_sm {
			font-size 15px
			line-height 20px
			padding 10px 20px
			border-radius 20px
			font-weight 700
			box-shadow inset 0 -6px 0 rgba(0, 0, 0, 0.2)

			&:active {
				box-shadow none
			}
		}

		&_sd {
			font-size 18px
			font-weight 400
			line-height 20px
			padding 15px
			border-radius 25px

			&:active {
				box-shadow none
			}
		}

		&_md {
			font-size 24px
			line-height 1
			padding 22.5px 25px
			border-radius 35px
			font-weight 700
			box-shadow inset 0 -3px 0 rgba(0, 0, 0, 0.2)

			&:active {
				box-shadow none
			}
		}

		&_lg {
			padding 15px 15px 18px
			border-radius 24px
			font-size 18px
			line-height 1
			font-weight 700
			text-shadow 1px 1px 0 rgba(255, 255, 255, 0.4)
			box-shadow inset 0 -3px 0 rgba(0, 0, 0, 0.2)

			@media (min-width $sm) {
				font-size 24px
				padding 25px
				border-radius 32px
			}

			&:active {
				box-shadow none
			}
		}
	}

	&_theme {
		&_green {
			background-color #78c264
			background-image: linear-gradient(to top, #78c264 0%, #78c264 1%, #6dce53 100%);
			background-size 50% 100%
			color white

			&:hover,
			&:focus,
			&:active {
				background darken(#78c264, 10%)
				color white
				text-decoration none
			}
		}

		&_yellow {
			background-color #ffde00
			background-image linear-gradient(to top, #ffde00 0%, #ffd800 100%)
			background-size 50% 100%
			color #282828

			&:hover,
			&:focus,
			&:active {
				background darken(#ffd800, 10%)
				color #282828
				text-decoration none
			}
		}
	}
}

.slick-dots {
	display block
	position relative
	list-style-type none
	padding 0
	margin 0
	text-align center


	li {
		display inline-block
	}

	li button {
		width 18px
		height 18px
		margin 0 5px
		border-radius 50%
		border none
		border 3px solid #ffffff
		background transparent
		padding 0
		font-size 0
		line-height 0
		color transparent
	}

	li button:hover,
	.slick-active button {
		background-color white
	}
}

.slick-arrow {
	position absolute
	top 50%
	font-size 0
	line-height 0
	margin -12px 0 0
	border none
	width 19px
	height 24px
	padding 5px
	background-color transparent
	background-repeat no-repeat
	background-position center


	&:hover {
		opacity 0.7
	}
}

.slick-prev {
	background-image url(../images/prev.png)
	left 0
}

.slick-next {
	background-image url(../images/next.png)
	right 0
}


.slider__nav {
	position relative
	display inline-block
	padding 0 25px
	margin 30px 0 50px
	min-height 25px
}

.slider_rec,
.slider_news {
	margin-left -10px
	margin-right -10px

	@media (min-width $sm) {
		margin-left -15px
		margin-right -15px
	}

	.slider__slide {
		margin 0 10px

		@media (min-width $sm) {
			margin 0 15px
		}
	}
}

.slider_main {
	.slick-dots {
		position absolute
		bottom 15px
		width 100%

		@media (min-width $md) {
			bottom 30px
		}

		button {
			opacity 1
		}
	}
}

