	border-radius 6px
	background-color #bcbcbc


	width 6px
	height 6px


}

::-webkit-scrollbar-thumb  {
	background-color #ffda00
	width 6px
	border-radius 6px
	border 3px solid transparent
	background-clip padding-box
	width 6px
	height 6px

	&:window-inactive {
		display none
		opacity .5
	}
}



